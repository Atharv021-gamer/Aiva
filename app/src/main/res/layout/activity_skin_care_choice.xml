<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_ai_gradient1">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:contentDescription="Back" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Skincare Path"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <!-- Cards Container -->
    <LinearLayout
        android:id="@+id/layoutCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="40dp"
        android:padding="20dp">

        <!-- Products Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProducts"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/imgProducts"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_card_green"
                    android:src="@drawable/ic_product"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="Products" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium Skincare Products"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/imgProducts"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Remedies Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRemedies"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/imgRemedies"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_remedies"
                    android:background="@drawable/bg_card_purple"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:contentDescription="Remedies" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Natural Home Remedies"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/imgRemedies"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
