<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parallaxLayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_ai_gradient"
    android:gravity="center"
    android:padding="24dp">

    <!-- Lottie animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/ai_icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleAiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aiva"
        android:textSize="36sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <!-- Subtitle cycling text -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your lifestyle companion"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

    <!-- Loading hint -->
    <TextView
        android:id="@+id/loadingHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:alpha="0" />

</LinearLayout>
