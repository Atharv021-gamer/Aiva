<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <gradient
        android:type="radial"
        android:gradientRadius="90"
        android:centerX="50%"
        android:centerY="50%"
        android:startColor="#FF7E5F"
        android:endColor="#FD3A69" />

    <size
        android:width="80dp"
        android:height="80dp" />

    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />

    <solid android:color="@android:color/transparent" />
</shape>
